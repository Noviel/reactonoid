{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "baseUrl": "./packages/",
    "paths": {
      "@reactonoid/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
}